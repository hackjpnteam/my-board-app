# データベース設定
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/board-app?retryWrites=true&w=majority

# JWT設定
JWT_SECRET=your-jwt-secret-key-here

# メール設定（Gmail使用）
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# 管理者メールアドレス
ADMIN_EMAIL=admin@example.com

# アプリケーションURL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 開発モード設定（デフォルト：true、本番でMongoDBを使用する場合はfalseに設定）
USE_MOCK_DB=true

# AWS設定
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# DynamoDB設定
DYNAMODB_TABLE_NAME=board-app-users
DYNAMODB_POSTS_TABLE_NAME=board-app-posts

# AWS Cognito設定
COGNITO_USER_POOL_ID=ap-northeast-1_xxxxxxxxx
COGNITO_CLIENT_ID=your-client-id

# Amazon SES設定
SES_FROM_EMAIL=noreply@yourdomain.com
SES_REGION=ap-northeast-1 